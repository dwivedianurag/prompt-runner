# OpenAI API Configuration
# Get your API key from https://platform.openai.com/api-keys
export OPENAI_API_KEY="sk-proj-YOUR_API_KEY_HERE"

# OpenAI Model Selection
# Options: gpt-4o-mini (128K context), gpt-4o (128K), gpt-5-mini (200K), gpt-5 (200K)
# Recommendation: gpt-4o-mini for cost efficiency, gpt-5 for large responses
export OPENAI_MODEL="gpt-4o-mini"

# MCP Endpoint
# URL of your running HoloMem MCP server
export MCP_ENDPOINT="http://127.0.0.1:8085/mcp"

# Optional: Tool Timeout (seconds)
# Override default 45-second timeout for MCP tool calls
# export PROMPT_RUNNER_TOOL_TIMEOUT=120

# Optional: Heartbeat Interval (seconds)
# Override default 5-second interval for progress logging during tool calls
# export PROMPT_RUNNER_HEARTBEAT=10

# Optional: Preflight Tools
# Comma-separated list of MCP tools to run before main prompt
# Default: holomem_switch_to_namespace,holomem_get_current_namespace
# export PROMPT_RUNNER_PREFLIGHT_TOOLS="holomem_switch_to_namespace,holomem_get_current_namespace"

# Optional: Content Type Override (Advanced - Not Recommended)
# Force specific content type for OpenAI Responses API
# Options: input_text, output_text
# export OPENAI_CONTENT_TYPE="input_text"
